@page "/PrintCargoWagon"
@layout PrintLayout
@inject IStringLocalizer<App> Localizer
@inject ILocalStorageService LocalStorage

<WagonPreview Data="@Data" Owner="@Owner"/>

@code {
    Wagon? Data { get; set; }
    Owner? Owner { get; set; }

    protected async override Task OnInitializedAsync()
    {
        Owner = await LocalStorage.GetItemAsync<Owner>("Owner");
        Data = await LocalStorage.GetItemAsync<Wagon>("CargoWagon");
    }
}
