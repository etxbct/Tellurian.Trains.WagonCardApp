@if (Data is null || Owner is null)
{
    <div>Not all data entered.</div>
}
else
{
    <div style="display:flex;flex-direction:column">
        <div>
            <CargoWagonCard Data="@Data" Owner="@Owner" />
        </div>
        <div style="display:flex;flex-direction:row">
            <div>
                <UicLabel Data=@Data />
                <UicLabel Data=@Data />
                <UicLabel Data=@Data />
                <UicLabel Data=@Data />
            </div>
            <InventoryCard Data="@Data" Owner="@Owner" />
        </div>
    </div>
}


@code {
    [Parameter] public CargoWagon? Data { get; set; }
    [Parameter] public Owner? Owner { get; set; }

}