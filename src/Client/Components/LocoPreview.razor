@if (Data is null || Owner is null)
{
    <div>Not all data entered.</div>
}
else
{
    <div style="display:flex;flex-direction:row">
        <div>
            @if (Data.PrintOptions.PrintCard)
            {
                <div>
                    <LocoCard Data="@Data" Owner="@Owner" />
                </div>
            }
            @if (Data.PrintOptions.PrintInventoryCard)
            {
                <div style="padding-top: 20px">
                    <InventoryCard Data="@Data" Owner="@Owner" />
                </div>
            }
        </div>

        @if (Data.PrintOptions.PrintFredSticker)
        {

            <div style="padding-left: 2px">
                <FREDSticker Data="@Data" Owner="@Owner" />
            </div>
            @if (Data.PrintOptions.PrintExtraFredSticker)
            {
                <div style="padding-left: 2px">
                    <FREDSticker Data="@Data" Owner="@Owner" />
                </div>
            }
        }
    </div>
}


@code {
    [Parameter] public Loco? Data { get; set; }
    [Parameter] public Owner? Owner { get; set; }

}