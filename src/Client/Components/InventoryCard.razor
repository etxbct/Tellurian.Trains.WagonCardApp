@inject IStringLocalizer<App> Localizer

<div style="display:block; transform:rotate(90deg) translate(-22mm,-22mm); height:95mm;width:55mm;text-align:center;border: 1px solid lightgray;padding-top:10pt">
    <h1>
        @Localizer["InventoryCard"]
    </h1>
    @if (Data is not null)
    {
        <div class="item-text" style="color:@Data.BackColor.DarkTextColor()">
            <span>@Data.OperatorSignature</span>
            <span>@Data.VehicleClass</span>
            <div style="font-size:@Data.VehicleNumber.WagonNumberFontSize()">@Data.VehicleNumber@Data.UicCheckDigit</div>
        </div>
        <hr />
        <div class="model-make">
            <span>@Data.ModelManufacturer</span>
            <span>@Data.ModelNumber</span>
        </div>
        @if (Data is Loco loco && loco.Address.HasValue)
        {
            <div class="dcc-address">
                DCC <span>@loco.Address</span>
            </div>
        }
        @if (!string.IsNullOrWhiteSpace(Data.Marking.InventoryNumber))
        {
            <hr />
            <div>
                <OwnerMarking Marking="@Data.Marking" />
            </div>
        }
        <hr />
    }
    <div>
        <h1>@Localizer.Label("Owner"):</h1>
        <div class="owner-text">@Owner?.OwnerName</div>
        <div class="owner-text">@Owner?.PhoneNumber</div>
        <div class="owner-email">@Owner?.EmailAddress</div>
    </div>

</div>

@code {
    [Parameter] public Vehicle? Data { get; set; }
    [Parameter] public Owner? Owner { get; set; }

}
