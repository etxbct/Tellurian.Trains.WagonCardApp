@page "/PrintLoco"
@layout PrintLayout
@inject IStringLocalizer<App> Localizer
@inject ILocalStorageService LocalStorage

<LocoPreview Data="@Data" Owner="@Owner"/>

@code {
    Loco? Data { get; set; }
    Owner? Owner { get; set; }

    protected async override Task OnInitializedAsync()
    {
        Owner = await LocalStorage.GetItemAsync<Owner>("Owner");
        Data = await LocalStorage.GetItemAsync<Loco>("Loco");
    }
}
