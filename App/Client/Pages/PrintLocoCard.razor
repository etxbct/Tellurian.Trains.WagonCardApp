@page "/PrintLoco"
@layout PrintLayout
@inject IStringLocalizer<App> Localizer
@inject ILocalStorageService LocalStorage

<LocoPreview Data="@Data" Owner="@Owner"/>

@code {
    Loco? Data { get; set; }
    Owner? Owner { get; set; }

    protected async override Task OnInitializedAsync()
    {
        Owner = await LocalStorage.GetItemAsync<Owner>("Owner") ?? new Owner() { OwnerName = "Stefan Fjällemark", EmailAddress = "stefan@fjallemark.se", PhoneNumber = "+46704712241" };
        Data = await LocalStorage.GetItemAsync<Loco>("Loco") ?? new Loco() { OperatorSignature = "DSB", VehicleClass = "ME", VehicleNumber = "1510" };
    }
}
